<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="true" android:state_pressed="true">
        <shape
            android:shape="rectangle">
            <gradient
                android:angle="135"
                android:startColor="#9E9E9E"
                android:centerColor="#E0E0E0"
                android:endColor="#9E9E9E"
                android:type="linear" />
            <corners android:radius="6dp" />
        </shape>
    </item>
    <item android:state_checked="true" android:state_focused="false">
        <shape
            android:shape="rectangle">
            <gradient
                android:angle="135"
                android:startColor="#9E9E9E"
                android:centerColor="#E0E0E0"
                android:endColor="#9E9E9E"
                android:type="linear" />
            <corners android:radius="6dp" />
        </shape>
    </item>
    <item  android:state_checked="false" android:state_pressed="true">
        <shape
            android:shape="rectangle">
            <gradient
                android:angle="135"
                android:startColor="#0091ea"
                android:centerColor="#0091ea"
                android:endColor="#0091ea"
                android:type="linear" />
            <corners android:radius="6dp" />
        </shape>
    </item>
    <item  android:state_checked="false" android:state_focused="false">
        <shape
            android:shape="rectangle">
            <gradient
                android:angle="135"
                android:startColor="#0091ea"
                android:centerColor="#0091ea"
                android:endColor="#0091ea"
                android:type="linear" />
            <corners android:radius="6dp" />
        </shape>
    </item>
</selector>
