<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="40dp"
    android:background="?attr/selectableItemBackground"     android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/inbox_avatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/inbox_name"
        android:paddingRight="10dp"
        android:layout_marginStart="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_centerVertical="false"
        android:layout_toRightOf="@+id/inbox_avatar"
        android:layout_toStartOf="@+id/inbox_msg"
        android:layout_toEndOf="@+id/inbox_avatar"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/inbox_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true" />

    <TextView
        android:id="@+id/inbox_preview"
        android:paddingRight="10dp"
        android:layout_marginStart="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_centerVertical="false"
        android:layout_below="@+id/inbox_name"
        android:layout_toRightOf="@+id/inbox_avatar"
        android:layout_toStartOf="@+id/inbox_msg"
        android:layout_toEndOf="@+id/inbox_avatar"
        android:textSize="12sp"/>
</RelativeLayout>